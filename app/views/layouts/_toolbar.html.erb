        <div class ='_clear operation'>
            <span class="tool">CLEAR<span class="tip">Clear all parameters selected.</span></span>
        </div>
    </div>&nbsp;
</div>

<script>
$("#params_div").hide();
function render_refine_toolbar(){
	$("#params_div").empty();
	$("#params_div").show();
	$("#params_div").append("<%= j render(partial: 'layouts/params_templates/refine_toolbar')%>");
	$('select').val("equals");
	parameters.put('filter', 'equals')
};

