<div class="modal fade" id="pathModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    	
        <div class="modal-content" style="overflow: auto; width: 900px">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                 <h4 class="modal-title"><%= t :select_pivot_relation%></h4>
		            <div class="modal-body">
						<div class = "relation_area form-group">
						</div>
					</div>
					
				 <div class="form-group position">
					 <label><%= t :set_level%></label>
 	 				 <div class="radio">
					   <label><input type="radio" id="domain" class = "param position_radio_input" param = "position" param_value = "1"><span>Level 1</span></label>
					 </div>
				 </div>
				<div>
					 <div class="checkbox">
					   <label><input type="checkbox" class="param" id="group_by_domain"  value = "group_by_domain" name="radio_strategy"><%= t :keep_source_items%></label>
					 </div>


					 <div class="checkbox">
					   <label><input type="checkbox" class="param" id="preview"><%= t :show_preview%></label>
					 </div>
				</div>
			</div>
					
				<form class="form-horizontal">
					
					

					  <div class="form-group">
					    <label class="control-label col-sm-2" for="pwd"><%= t :values_preview%></label>
					    <div class="col-sm-10"> 
						   <select class="form-control values_select">
						     <option value="sm"><a><%= t :values%></a></option>
						   </select>
					    </div>
					  </div>
				</form>
				<div id = "pivot_help" class="help">
				</div>
 	 		   <div class="modal-footer">
	 		       <button type="button" id="exec" class="exec btn btn-default" data-dismiss="modal"><%= t :go%></button>
				   <button type="button" id="clear" class="clear btn btn-default" data-dismiss="modal"><%= t :clear%></button>
				   <button type="button" id="pivot_btn" class="btn btn-default help_btn" operation="pivot" ><%= t :help%></button>
 	 	       </div>
				
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
