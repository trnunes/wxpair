<div class="modal fade" id="rankModal"  role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="overflow: auto; width: 900px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                 <h4 class="modal-title"><% t :ranking_strategy %></h4>
				 
            </div>

            <div class="modal-body">
				 <div class="form-group position">
					 <label><%= t :set_level%></label>
 	 				 <div class="radio">
					   <label><input type="radio" id="domain" class = "param position_radio_input" param = "position" param_value = "2"><span>Level 1</span></label>
					 </div>
				 </div>
					 					 
				 
				 <div class="form-group" >
					 <label><%= t :rank_by%></label>
					 <div class="radio">
					   <label><input type="radio" id = "alpha_rank" class = "param" param = "ranking_function" param_value = "alpha_rank" name="radio_strategy" checked><%= t :alpha%></label>
					 </div>
					 <div class="radio">
					   <label><input type="radio" class="relation_tree_activator param" id="relation_radio" param = "ranking_function" param_value = "by_image" name="radio_strategy"><%= t :related_value%></label>
					 </div>
					 <div class="radio">
					   <label><input type="radio" id = "by_level" class = "param" param = "ranking_function" param_value = "by_level" name="radio_strategy"><%= t :last_level%></label>
					 </div>
				 </div>
				 
				<div class = "relation_area form-group">
				</div>

				 <div class="form-group" id="rank_order">
					 <div class="radio">
					   <label><input type="radio" id="asc" class="param" param="order" param_value="ASC" name="order" checked><%= t :asc%></label>
					 </div>
					 <div class="radio">
					   <label><input type="radio" id="desc" class="param" param="order" param_value="DESC" name="order"><%= t :desc%></label>
					 </div>
				 </div>
				 
